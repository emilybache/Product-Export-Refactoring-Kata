{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "esnext"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./build/",
        "noEmitOnError": true,
        "alwaysStrict": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
    },
    "include": [
        "./src/**.ts",
        "./tests/*.spec.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}